@page
@model IndexModel
@{
    ViewData["Title"] = "CK Content Creator";
    var theme = HttpContext.Session.GetString("Theme") ?? "light";
}
<!DOCTYPE html>
<html lang="en" data-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-primary" asp-page="/Index">CK Content Creator</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/PostIdeas">Post Ideas</a>
                        </li>
                        @foreach (var blog in Model.Blogs)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/ManagePosts" asp-route-blogName="@blog.Name">Manage @blog.Name</a>
                            </li>
                        }
                    </ul>
                    <form method="post" asp-page-handler="SwitchTheme">
                        <button type="submit" class="btn btn-sm btn-outline-primary">Switch to @(theme == "light" ? "Dark" : "Light") Mode</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 class="display-4">Welcome to CK Content Creator</h1>
                    <p class="lead">Generate AI-powered blog posts with images and publish to your WordPress sites.</p>
                </div>
            </div>
        </main>
    </div>
    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2026 - CK Content Creator
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>