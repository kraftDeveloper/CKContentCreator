@page "{id:Guid}"
@model PreviewModel
@{
    var theme = HttpContext.Session.GetString("Theme") ?? "light";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Preview: @Model.Idea.Topic</h1>
    <div class="card">
        <div class="card-body">
            @if (Model.Idea.Image != null && Model.Idea.Image.Length > 0)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Idea.Image)" class="img-fluid mb-3" alt="Featured Image" />
            }
            else
            {
                <p class="text-muted">Generated Image Prompt: @Model.Idea.ImagePrompt (Image not generated yet)</p>
            }
            <div class="blog-preview">
                @Html.Raw(Model.Idea.Content)
            </div>
        </div>
    </div>
</div>