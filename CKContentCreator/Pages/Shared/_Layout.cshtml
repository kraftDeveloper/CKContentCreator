<!DOCTYPE html>
<html lang="en" data-theme="@(Context.Session.GetString("Theme") ?? "light")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CK Content Creator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Head", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-page="/Index">CK Content Creator</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarCollapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/PostIdeas">Post Ideas</a>
                        </li>
                        @if (ViewBag.Blogs is IEnumerable<CKContentCreator.Models.Blog> blogs)
                        {
                            foreach (var blog in blogs)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/ManagePosts" asp-route-blogName="@blog.Name">
                                        Manage @blog.Name
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <form method="post" asp-page="/Index" asp-page-handler="SwitchTheme" class="d-flex">
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            Switch to @(Context.Session.GetString("Theme") == "dark" ? "Light" : "Dark") Mode
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main class="container flex-grow-1">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 mt-auto">
        <div class="container">
            &copy; 2026 - CK Content Creator
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>